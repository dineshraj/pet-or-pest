{
  "name": "pet-or-pest",
  "version": "1.0.0",
  "description": "A nodejs app using express, webpack, babel and React,",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production npm run clean && npm run babel && webpack",
    "build:dev": "NODE_ENV=dev npm run clean && npm run babel && webpack --display-error-details",
    "debug": "NODE_ENV=dev nodemon -e js,ts,tsx,html,scss --ignore dist/ --ignore public/ --exec npm run build:dev",
    "test": "",
    "start": "node dist/server.js",
    "posttest": "npm run tsc && npm run lint && npm run format:check",
    "babel": "babel src --out-dir ./dist --source-maps --extensions .js,.ts,.tsx --copy-files",
    "clean": "rm -rf ./dist && mkdir -p ./dist/public",
    "deploy": "npm run test && npm run build && cf push",
    "format": "prettier --loglevel warn --write '**/*.{ts,js,json,jsx,tsx,md}'",
    "format:check": "prettier --check '**/*.{ts,js,json,jsx,tsx,md}'",
    "tsc": "tsc --noEmit",
    "lint": "npm run eslint && npm run lint:sass",
    "eslint": "eslint . --ext=tsx --ext=ts --ext=jsx --ext=js",
    "lint:sass": "sass-lint -v -q"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dineshraj/pet-or-pest.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dineshraj/pet-or-pest/issues"
  },
  "homepage": "https://github.com/dineshraj/pet-or-pest#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@types/express": "^4.17.6",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.1.1",
    "node-sass": "^4.13.1",
    "nodemon": "^2.0.3",
    "prettier": "2.0.4",
    "sass-lint": "^1.13.1",
    "sass-loader": "^8.0.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "url-loader": "^4.1.0",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "express": "^4.17.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "eslintConfig": {
    "extends": [
      "prettier",
      "prettier/react",
      "prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  }
}
